JavaScript:
function resizeBox(sizeValue, btnElement) {
    var dimensions = sizeValue.split(",");
    var width = dimensions[0];
    var height = dimensions[1];
    
    var box = document.getElementById("previewBox");
    var scrollArea = document.querySelector(".content-scroll-area");
    
    if (btnElement) {
        document.querySelectorAll('.device-btn').forEach(btn => btn.classList.remove('active'));
        btnElement.classList.add('active');
    }
    
    box.style.width = width + "px";
    box.style.height = height + "px";
    
    box.classList.remove('mobile-mode', 'tablet-mode');

    if (parseInt(width) < 500) {
        box.classList.add('mobile-mode');
        
        scrollArea.style.padding = "10px";
        box.style.border = "14px solid #1e293b";
        box.style.borderRadius = "40px";
    } else if (parseInt(width) < 1000) {
        box.classList.add('tablet-mode');
        
        scrollArea.style.padding = "20px";
        box.style.border = "1px solid rgba(255,255,255,0.05)";
        box.style.borderRadius = "0";
    } else {
        scrollArea.style.padding = "20px";
        box.style.border = "1px solid rgba(255,255,255,0.05)";
        box.style.borderRadius = "0";
    }
}
